<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><%= title %></h5>
            <a href="/" class="btn btn-sm btn-secondary">x</a>
        </div>
        <div class="card-body p-4">
            <form action="/stages<%= stage ? '/' + stage.id + '?_method=PUT' : '' %>" method="POST">
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Entreprise</label>
                        <input type="text" name="entreprise" class="form-control" value="<%= stage ? stage.entreprise : '' %>" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Intitul√© Stage</label>
                        <input type="text" name="poste" class="form-control" value="<%= stage ? stage.poste : '' %>" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label text-muted small"><i class="bi bi-link-45deg"></i> Lien annonce</label>
                    <input type="url" name="lien" class="form-control form-control-sm" placeholder="https://..." value="<%= stage ? stage.lien : '' %>">
                </div>

                <hr class="my-4 text-muted">

                <div class="row mb-3 p-3 bg-light rounded border">
                    <div class="col-md-6 mb-2">
                        <label class="form-label text-secondary">üìß Date d'envoi du mail</label>
                        <input type="date" name="dateEnvoi" id="dateEnvoi" class="form-control" value="<%= stage ? stage.dateEnvoi : '' %>">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-primary">üìÖ Date de Relance (+7j)</label>
                        <input type="date" name="dateRelance" id="dateRelance" class="form-control border-primary" value="<%= stage ? stage.dateRelance : '' %>">
                        <div class="form-text small text-primary">Calcul automatique</div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">√âtat</label>
                        <select name="etat" class="form-select">
                            <option value="En attente" <%= (stage && stage.etat === 'En attente') ? 'selected' : '' %>>‚è≥ En attente</option>
                            <option value="Entretien" <%= (stage && stage.etat === 'Entretien') ? 'selected' : '' %>>üó£Ô∏è Entretien</option>
                            <option value="Valid√©" <%= (stage && stage.etat === 'Valid√©') ? 'selected' : '' %>>‚úÖ Valid√©</option>
                            <option value="Refus√©" <%= (stage && stage.etat === 'Refus√©') ? 'selected' : '' %>>‚ùå Refus√©</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Date d√©but stage (Optionnel)</label>
                        <input type="date" name="dateDebut" class="form-control" value="<%= stage ? stage.dateDebut : '' %>">
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Notes</label>
                    <textarea name="notes" class="form-control" rows="3"><%= stage ? stage.notes : '' %></textarea>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark btn-lg"><%= stage ? 'Mettre √† jour' : 'Sauvegarder' %></button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const inputEnvoi = document.getElementById('dateEnvoi');
    const inputRelance = document.getElementById('dateRelance');

    // Quand on change la date d'envoi...
    inputEnvoi.addEventListener('change', function() {
        const dateStr = inputEnvoi.value;
        if(dateStr) {
            const date = new Date(dateStr);
            // On ajoute 7 jours
            date.setDate(date.getDate() + 7);
            
            // On formate en YYYY-MM-DD pour que l'input comprenne
            const jour = String(date.getDate()).padStart(2, '0');
            const mois = String(date.getMonth() + 1).padStart(2, '0'); // Janvier = 0
            const annee = date.getFullYear();
            
            inputRelance.value = `${annee}-${mois}-${jour}`;
        }
    });
</script>

</body>
</html>